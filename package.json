{
    "name": "cashplot",
    "author": "Casper Uiterwijk <contact@cuiter.me>",
    "license": "AGPL-3.0-or-later",
    "private": true,
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "globals": {
            "ts-jest": {
                "diagnostics": {
                    "ignoreCodes": [
                        "TS151001"
                    ]
                }
            }
        }
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false
    },
    "scripts": {
        "dev": "webpack && xdg-open ./public/index.html",
        "build": "webpack",
        "test": "jest",
        "lint": "eslint src/ tests/ public/sw.js --ext .ts,.js,.vue",
        "format": "prettier --write .",
        "gen-diagrams": "tplant -A --input src/main.ts --output docs/diagrams/ClassDiagram.svg && plantuml docs/diagrams/ComponentDiagram.plantuml",
        "gen-docs": "typedoc --name CashPlot --media public/assets --out docs/public src/interfaces.ts src/utils.ts src/model/entities.ts"
    },
    "dependencies": {
        "class-transformer": "^0.5.1",
        "dayjs": "^1.10.7",
        "papaparse": "^5.3.1",
        "reflect-metadata": "^0.1.13",
        "typed-inject": "^3.0.1",
        "vue": "^2.6.11",
        "vue-infinite-loading": "2.4.5"
    },
    "devDependencies": {
        "@daign/observable": "^1.0.3",
        "@types/jest": "^27.0.3",
        "@types/papaparse": "^5.3.1",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-vue": "^8.7.1",
        "jest": "^27.4.3",
        "prettier": "^2.5.0",
        "raw-loader": "^4.0.2",
        "tplant": "^3.1.0",
        "ts-jest": "^27.0.7",
        "ts-loader": "^9.2.6",
        "typedoc": "^0.22.15",
        "typescript": "^4.5.2",
        "vue-loader": "^15.9.3",
        "vue-template-compiler": "^2.6.11",
        "webpack": "^5.64.4",
        "webpack-cli": "^4.9.1",
        "webpack-livereload-plugin": "^3.0.2"
    }
}
