{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./build/",
        "allowJs": true,
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        //"noEmitOnError": false, // without it, webpack wouldn't resolve vue files without extension
        "strict": true,
        "noImplicitThis": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.vue"],
    "exclude": ["src/ui/static"]
}
